{
  // tasks.json 형식에 대한 설명서는
  // https://go.microsoft.com/fwlink/?LinkId=733558의 내용을 참조하세요.
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cpp build active file",
      "command": "/usr/bin/cpp",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "g++ build active file",
      "command": "g++",
      "args": [
        "-g",
        "${file}",
        "-std=c++11",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "exec",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.out",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
